<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.ContactenosActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_above="@+id/relLayoutBot"
            android:orientation="vertical"
            android:background="@drawable/tapiz_nuevo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            </RelativeLayout>
            <LinearLayout
                android:layout_weight="0.3"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                </RelativeLayout>
                <LinearLayout
                    android:elevation="10dp"
                    android:background="@color/colorBlanco"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.15">
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="0.15"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="¿Hablamos?"
                                    android:autoSizeMaxTextSize="50sp"
                                    android:autoSizeMinTextSize="16sp"
                                    android:autoSizeStepGranularity="1sp"
                                    android:autoSizeTextType="uniform"
                                    android:textSize="16sp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                                <EditText
                                    android:id="@+id/nombre_Correo"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="text"
                                    android:hint="Nombre"
                                    android:autoSizeMaxTextSize="50sp"
                                    android:autoSizeMinTextSize="14sp"
                                    android:autoSizeStepGranularity="1sp"
                                    android:autoSizeTextType="uniform"
                                    android:textSize="14sp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                                <EditText
                                    android:id="@+id/telefono_Correo"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:hint="Teléfono"
                                    android:autoSizeMaxTextSize="50sp"
                                    android:autoSizeMinTextSize="14sp"
                                    android:autoSizeStepGranularity="1sp"
                                    android:autoSizeTextType="uniform"
                                    android:textSize="14sp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                                <EditText
                                    android:id="@+id/correo_Persona"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textEmailAddress"
                                    android:hint="Email"
                                    android:autoSizeMaxTextSize="50sp"
                                    android:autoSizeMinTextSize="14sp"
                                    android:autoSizeStepGranularity="1sp"
                                    android:autoSizeTextType="uniform"
                                    android:textSize="14sp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="0.9"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                                <EditText
                                    android:id="@+id/mensaje_Correo"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textMultiLine"
                                    android:hint="Mensaje"
                                    android:autoSizeMaxTextSize="50sp"
                                    android:autoSizeMinTextSize="14sp"
                                    android:autoSizeStepGranularity="1sp"
                                    android:autoSizeTextType="uniform"
                                    android:textSize="14sp"/>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1.1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                                <Button
                                    android:elevation="10dp"
                                    android:background="@drawable/boton_logueo_facebook"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:textColor="@color/colorBlanco"
                                    android:text="Enviar"
                                    android:onClick="EnviarCorreo"/>
                            </RelativeLayout>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">
                        </RelativeLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            </RelativeLayout>
        </LinearLayout>
        //MENU
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/relLayoutBot"
            android:layout_alignParentBottom="true"
            android:background="#FFFFFF">

            <android.support.design.widget.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bottomNavView_Bar"
                android:background="@drawable/plomo_border_top"
                app:menu="@menu/bottom_navigation_menu"
                app:itemIconTint="@drawable/bottom_nav_colors"
                app:itemTextColor="@drawable/bottom_nav_colors">

            </android.support.design.widget.BottomNavigationView>

        </RelativeLayout>
        //FIN MENU
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>